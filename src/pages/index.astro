import thumbsup from "../assets/images/thumbsup.png";
import Photo1 from "../assets/images/collage/boat-1.webp";
import Photo2 from "../assets/images/collage/boat-3.webp";
import Photo3 from "../assets/images/collage/dive.webp";
import Photo4 from "../assets/images/collage/mountain.webp";
import Photo5 from "../assets/images/collage/mountain-3.webp";
import Photo6 from "../assets/images/collage/helmet.webp";
