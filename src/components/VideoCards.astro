---
const { url="#", cardvideo="",  ophold1="", ophold2="", ophold3="", ophold4="", ophold5="", ophold6="", months="" } = Astro.props; 
---


   <div class=" cursor-pointer video-container relative w-[320px] h-[450px] rounded-xl overflow-hidden">
    <div class="absolute bg-gradient-card-desktop z-10 h-full w-full rounded-t-xl"></div>
    <video class="video w-full h-full object-cover" src={cardvideo} muted  ></video>
    <div class="text z-20 absolute inset-0 flex flex-col justify-center  p-4 transition-all">
      <span class="text-turkis-300 text-lg font-bold absolute top-6 right-6">{months}</span>
      <div class="absolute bottom-10 flex flex-col gap-2 pt-8">
        <h4 class="uppercase text-beige-200">{ophold1}</h4>
        <h4 class="uppercase text-beige-200">{ophold2}</h4>
        <h4 class="uppercase text-beige-200">{ophold3}</h4>
        <h4 class="uppercase text-beige-200">{ophold4}</h4>
        <h4 class="uppercase text-beige-200">{ophold5}</h4>
        <h4 class="uppercase text-beige-200">{ophold6}</h4>
      </div>
    </div>
  </div>

<style>
    .video-container .text {
    opacity: 1;
    transition: opacity 0.3s ease-in-out;
}

.video-container:hover .text {
    opacity: 0;
    pointer-events: none; /* Ensures the hidden text does not interfere with interactions */
}
</style>

<script>
const videoContainers = document.querySelectorAll('.video-container');

videoContainers.forEach(container => {
    const video = container.querySelector('.video');

    if ('ontouchstart' in window || navigator.maxTouchPoints) {
        container.addEventListener('touchstart', function () {
            if (video.paused) {
                video.play();
            } else {
                video.pause();
            }
        });
    } else {
        container.addEventListener('mouseenter', function () {
            video.play();
        });

        container.addEventListener('mouseleave', function () {
            video.pause();
        });
    }
});
</script>

